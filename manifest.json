{
  "manifest_version": 3,
  "name": "GhostInput",
  "version": "1.1.0",
  "description": "GhostInput: Schedule automated key presses and mouse clicks at custom intervals with advanced features",
  "author": "GhostInput",
  "icons": {
    "16": "icons/ghost16.png",
    "32": "icons/ghost32.png",
    "48": "icons/ghost48.png",
    "128": "icons/ghost128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/ghost16.png",
      "32": "icons/ghost32.png",
      "48": "icons/ghost48.png",
      "128": "icons/ghost128.png"
    },
    "default_title": "GhostInput"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms",
    "tabs",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "toggle-all": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Toggle all actions on/off"
    },
    "toggle-overlay": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Toggle countdown overlay"
    }
  },
  "host_permissions": [
    "<all_urls>"
  ]
}